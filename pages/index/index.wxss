/**index.wxss**/
.container {
  position: relative;
}

.search {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  margin: 15px 25rpx;
  width: 700rpx;
  height: 30px;
  border-radius: 30px;
  border: 1px solid #e2e2e2;
  padding: 0 15px;
  box-sizing: border-box;
  background-color: #e2e2e2a6;
  align-items: center;
}

.icon {
  width: 20px;
  height: 20px;
}

.banner {
  width: 100%;
  height: 100%;
}

.wrapper-category {
  width: 150rpx;
  align-items: center;
  margin-bottom: 20px;
}

.category-icon {
  width: 40px;
  height: 40px;
}

.category {
  flex-wrap: wrap;
  padding-top: 20px;
}

.flex-wrap {
  flex-wrap: wrap;
}

.good-list {
  background-color: #e2e2e2be;
}

.wrap-good {
  margin: 10px 12rpx 0;

}